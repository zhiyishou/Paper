{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}" action="article">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt characters="150"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#foreach tags}}
            <a href="{{url}}" title="{{name}}" action="tag">{{name}}</a>
        {{/foreach}}
        <time class="post-date" datetime="{{date published_at format='YYYY-MM-DD'}}">{{date published_at timeago="true"}}</time>
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
</div>