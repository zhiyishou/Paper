{{!< default}}
<div id="inner-body" class="left-top">
    {{> "nav"}}
    <main class="container" id="container">
        {{> "switch"}}
        <div class="contents">
            <!-- bg-->
            <div class="cover-bg"></div>
            <!--left start-->
            <div class="content left-content post-list" id="left-top">
                <header class="main-header tag-head" >
                    <div class="vertical">
                        <div class="main-header-content inner">
                            <h1 class="page-title">{{tag.name}}</h1>
                            <h2 class="page-description">
                                {{#if tag.description}}
                                    {{tag.description}}
                                {{else}}
                                    {{pagination.total}}-post collection
                                {{/if}}
                            </h2>
                        </div>
                    </div>
                </header>
                {{> "loop"}}
            </div>
            <div class="content left-content post-list" id="left-middle"></div>
            <div class="content left-content post-article" id="left-bottom"></div>
            <!--left end-->
            <div class="content right-content post-list" id="right-middle"></div>
        </div>
        <a id="home-btn">HOME</a>
    </main>
</div>